{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "izaj",
  "version": "0.1.0",
  "identifier": "com.izaj.app",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "IZAJ Lighting Centre",
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icon"
    ]
  }
}